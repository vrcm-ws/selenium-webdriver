<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="LoginPageTestSuite" parallel="tests" thread-count="5">

  <test name="PositiveLoginTest-FF">
    <parameter name="browser" value="firefox"/>
    <classes>
      <class name="com.herokuapp.theinternet.tests.LoginTests">
        <methods>
          <include name="loginTest"/>
        </methods>
      </class>
    </classes>
  </test>

  <test name="NegativeUsernameTest-CH">
    <parameter name="username" value="incorrectUsername"/>
    <parameter name="password" value="SuperSecretPassword!"/>
    <parameter name="expectedMessage" value="Your username is invalid!"/>
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="com.herokuapp.theinternet.tests.LoginTests">
        <methods>
          <include name="loginNegativeTest"/>
        </methods>
      </class>
    </classes>
  </test>

  <test name="NegativeUsernameTest-FF">
    <parameter name="username" value="incorrectUsername"/>
    <parameter name="password" value="SuperSecretPassword!"/>
    <parameter name="expectedMessage" value="Your username is invalid!"/>
    <parameter name="browser" value="firefox"/>
    <classes>
      <class name="com.herokuapp.theinternet.tests.LoginTests">
        <methods>
          <include name="loginNegativeTest"/>
        </methods>
      </class>
    </classes>
  </test>

  <test name="NegativePasswordTest-CH">
    <parameter name="username" value="tomsmith"/>
    <parameter name="password" value="incorrectPassword"/>
    <parameter name="expectedMessage" value="Your password is invalid!"/>
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="com.herokuapp.theinternet.tests.LoginTests">
        <methods>
          <include name="loginNegativeTest"/>
        </methods>
      </class>
    </classes>
  </test>

  <test name="NegativePasswordTest-FF">
    <parameter name="username" value="tomsmith"/>
    <parameter name="password" value="incorrectPassword"/>
    <parameter name="expectedMessage" value="Your password is invalid!"/>
    <parameter name="browser" value="firefox"/>
    <classes>
      <class name="com.herokuapp.theinternet.tests.LoginTests">
        <methods>
          <include name="loginNegativeTest"/>
        </methods>
      </class>
    </classes>
  </test>

</suite>
